# Streamlit Secrets Configuration Template
# Copy this file to .streamlit/secrets.toml and fill in your actual values
# DO NOT commit secrets.toml to git!

[mongo]
# MongoDB Atlas connection string
# Format: mongodb+srv://<username>:<password>@<cluster>.<id>.mongodb.net/?retryWrites=true&w=majority
uri = "your_mongodb_atlas_connection_string_here"

[gemini]
# Google Gemini API key
# Get from: https://makersuite.google.com/app/apikey
api_key = "your_gemini_api_key_here"

[ocr]
# Tesseract OCR path (Windows only, optional)
# Linux/Mac: Usually installed system-wide, leave empty
tesseract_cmd = "C:/Program Files/Tesseract-OCR/tesseract.exe"

